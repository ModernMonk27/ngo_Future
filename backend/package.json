{
  "name": "ngo-data-hub-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:migrate": "mysql -u root -p ngo_data_hub < ./schema.sql",
